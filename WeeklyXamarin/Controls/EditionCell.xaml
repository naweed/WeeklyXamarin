<?xml version="1.0" encoding="UTF-8"?>
<ContentView
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:commoncontrols="clr-namespace:WeeklyXamarin.Framework.UI.Controls;assembly=WeeklyXamarin.Framework"
    x:Name="EditionViewCell"
    x:Class="WeeklyXamarin.Controls.EditionCell">
    <ContentView.Content>
        <Frame
            Padding="16"
            Margin="6"
            VerticalOptions="StartAndExpand"
            HorizontalOptions="FillAndExpand"
            BackgroundColor="White"
            CornerRadius="8"
            HasShadow="False"
            BorderColor="Transparent">

            <Grid
                RowDefinitions="Auto,1,Auto"
                ColumnDefinitions="*,16,Auto">

                <!-- Edition No -->
                <Label
                    Margin="0,0,0,6"
                    Style="{StaticResource DisplayTextHeaderStyle}"
                    Text="{Binding EditionNo, Converter={StaticResource cvtStringCase}, ConverterParameter=U}"
                    Grid.Column="0"
                    Grid.ColumnSpan="3"
                    Grid.Row="0" />

                <!-- Item Seperator -->
                <BoxView
                    HeightRequest="1"
                    BackgroundColor="{StaticResource BorderColor}"
                    Opacity="0.6"
                    Grid.Column="0"
                    Grid.ColumnSpan="3"
                    Grid.Row="1"
                    VerticalOptions="Fill"
                    HorizontalOptions="Fill" />

                <!-- Edition Summary -->
                <Label
                    Margin="0,8,0,0"
                    Style="{StaticResource DisplayTextStyle}"
                    Text="{Binding SummaryDisplay}"
                    Grid.Column="0"
                    Grid.Row="2" />

                <!-- Edition Date -->
                <commoncontrols:DateBadge
                    Date="{Binding PublishDate}"
                    Margin="0,8,0,0"
                    Grid.Row="2"
                    Grid.Column="2"
                    VerticalOptions="Start"
                    HorizontalOptions="Fill"
                    WidthRequest="42"
                    HeightRequest="60" />


                <!-- Gesture Recognizer to Open the Edition -->
                <Grid.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding Source={x:Reference EditionViewCell}, Path=ParentContext.NavigateToEditionCommand, Mode=OneWay}" CommandParameter="{Binding .}" />
                </Grid.GestureRecognizers>

            </Grid>

                

            </Frame>
    </ContentView.Content>
</ContentView>
